@charset "utf-8";
.adBox{
	position: relative;
	margin: 10px 5px;	
}
.adPic{
	-webkit-border-radius: 5px;
	border-radius: 5px;
}
.adPic,.adBox{
	width: 240px;
	height: 80px;
}
.fucus_pic{
	width: 100%;
	height: 80px;
}

.adBottom{
	position: absolute;
	left: 0px;
	right: 0px;
	bottom: 0px;
	background: -webkit-linear-gradient(top, rgba(0,0,0,0), black);
	opacity: 0.4;
	z-index: 1;
	-webkit-border-bottom-left-radius: 5px;
	-webkit-border-bottom-right-radius: 5px;
	border-bottom-left-radius: 5px;
	border-bottom-right-radius: 5px;
}
.adTitle{
	position: absolute;
	bottom: 3px;
	z-index: 2;
	text-align: center;
	vertical-align: middle;
	padding: 0 5px;
}
.adTitle h3{
	color: white;
	font-size: 12px;
}







