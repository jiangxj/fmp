body{
	background-color: #F0F0F0;
}
.line_link_group{
	margin: 1rem 0;
	border-top: 0.1rem solid gainsboro;
	border-bottom: 0.1rem solid gainsboro;
}
.content{
	padding:0 2rem;
	background-color: white;
}
.line_link_group .item{
	width: 28rem;
	border-bottom: 0.1rem solid gainsboro;
	position: relative;
	height: 4rem;
	line-height: 4rem;
	color: #999;
	font-size: 1.5rem;
}
.line_link_group :last-child{
	border: none;
}
.left{
	width: 12rem;
	float: left;
	
}
.right{
	width: 16rem;
	float: right;
	text-align: right;
}
.right img{
	width: 1.3rem;
	height: 1.3rem;
}
